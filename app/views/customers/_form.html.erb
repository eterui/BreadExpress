<%= simple_nested_form_for @customer, :html => { :class => 'form-horizontal' } do |customer_form| %>
  <div>
      <legend><%= controller.action_name.capitalize %> Account</legend>
      <div>
        <div>
          <%= customer_form.simple_fields_for :user do |user_form| %>
            <%= render :partial => "user_fields", :locals => { :f => user_form } %>
          <% end %>
        </div>

        <div>
          <div>
              <%= render :partial => "customer_fields", :locals => { :f => customer_form } %>
          </div> 
        </div>
      </div>
    <div class="form-actions">
      <%= customer_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', customers_path, :class => 'button secondary' %>
    </div>
  </div>

  </br>
<% end %>