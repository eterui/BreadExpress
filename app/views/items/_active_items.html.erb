<% if @items.count.zero? %>
  <p>No active items at this time</p>

<% else %>
  
  <h4>Available Items</h4>
  <table class="striped">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Units</th>
      <th></th>
    </tr>

    <% @items.alphabetical.each do |item| %>
      <tr>
       	<td><%= link_to item.name, item_path(item) %></td> 
        <td><%= number_to_currency(item.current_price, :unit => "$") %></td>
        <% if item.category == 'bread' %>
          <td><%= "#{item.units_per_item} loaf" %></td>
        <% else %>
          <td><%= "#{item.units_per_item} #{item.category}" %></td>
        <% end %>
        <td class="btn waves-effect yellow darken-2"><%= link_to 'Edit', edit_item_path(item) %></td>
      </tr>
    <% end %>
  
  </table>
<% end %>