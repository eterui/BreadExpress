<table class="striped">
  <tr>
    <th>Item</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @items_for_category.each do |item| %>
    <tr>
     	<td><%= link_to item.name, item_path(item) %></td> 
      <td><%= item.description %></td>
      <td><%= link_to "Add to Cart", add_item_path(item.id) %></td>
    </tr>
  <% end %>
  
</table>