<table class="striped">
  <tr>
    <th>Item</th>
    <th>Description</th>
    <th>Category</th>
    <th>active</th>
    <th></th>
  </tr>

  <% Item.for_category(@item.category).alphabetical.each do |item| %>
    <tr>
     	<td><%= link_to item.name, item_path(item) %></td> 
      <td><%= item.description %></td>
      <td><%= item.category %></td>
      <td class="btn waves-effect yellow darken-2"><%= link_to 'Edit', edit_item_path(item) %></td>
    </tr>
  <% end %>
  
</table>