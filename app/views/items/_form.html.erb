<%= simple_form_for @item, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Item</legend>

    <%= f.input :name, input_html: {class: "avg"} %>
    <%= f.input :description, input_html: {class: "avg"} %>
    <%= f.input :category, collection: Item::CATEGORIES, include_blank: true, prompt: "Select Category...", input_html: {class: "avg"} %>
    <%= f.input :units_per_item, input_html: {class: "avg"} %>

    <input name="item[active]" type="hidden" value="0" />
    <input checked="checked" id="item_active" name="item[active]" type="checkbox" value="1" />
    <label for="item_active">Active</label>
    </br>
    </br>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', addresses_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>