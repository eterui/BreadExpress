<table class="striped">
    <tr>
      <th>Price</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th></th>
    </tr>

    <% @item_prices.each do |item_price| %>
      <tr>
        <td><%= number_to_currency(item_price.price, :unit => "$") %></td>
        <td><%= item_price.start_date.strftime('%m/%d/%y') %></td>
        <% if item_price.end_date != nil %>
          <td><%= item_price.end_date.strftime('%m/%d/%y') %></td>
        <% else %>
          <td>N/A</td>
        <% end %>
      </tr>
    <% end %>
  
  </table>